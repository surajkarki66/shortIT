{
  "name": "shortIT",
  "version": "1.0.0",
  "description": "This is a web application that takes long url and convert them to short and tiny url.",
  "main": "index.js",
  "scripts": {
    "build-js": "rm -rf dist/ && prettier --write src/ && tsc",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node --files' src/app.ts",
    "start": "node dist/app.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "snyk test",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "repository": "https://github.com/surajkarki66/shortIT.git",
  "author": "surajkarki66 <suraj.karki500@protonmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-validator": "^6.10.0",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.12.3",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "nanoid": "^3.1.22",
    "nodemailer": "^6.5.0",
    "passport-local": "^1.0.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/express-session": "^1.17.3",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.4",
    "@types/morgan": "^1.9.2",
    "@types/morgan-json": "^1.1.0",
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "@types/react-router-dom": "^5.1.7",
    "nodemon": "^2.0.7",
